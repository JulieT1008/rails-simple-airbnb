<h1>All our Flats</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="card col-2 m-2" style="width: 22rem;">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <div class="row">
          <p class="card-text col-3"><i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests %></p>
          <p class="card-text col-3"><i class="fa-solid fa-credit-card"></i> <%= flat.price_per_night %></p>
        </div>
        <a href="#" class="btn btn-outline-info">More info</a>
        <a href="#" class="btn btn-outline-info">Another link</a>
      </div>
    </div>
  <% end %>
</div>
